{% extends 'AppBundle::page.html.twig' %}

{% block titre %}Liste des groupes{% endblock %}

{% block body %}

<table class="ui-widget-content dataTable TabInfos" filter="25">
    <thead>
        <tr>
            <th>cn</th>
	    <th>Description</th>
            <th>amuGroupFilter</th>
            {% if opt=='search' %}
                <th>Voir</th>
            {% endif %}
            {% if opt=='del' %}
                <th>Supprimer</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
    {% for group in groups %}
	<tr > 
	  <td style="vertical-align: middle;">{{group.cn}}</td>
          <td style="vertical-align: middle;">{{group.description}}</td>
          <td style="vertical-align: middle;">{{group.amugroupfilter}}</td>
          <td style="vertical-align: middle;">
              {% if opt=='search' %}
                <a href="{{ path('voir_groupe', { 'cn': group.cn }) }}">Voir</a>
              {% endif %}
              {% if opt=='del' %}
                <a href="{{ path('delete_groupe', { 'cn': group.cn }) }}">Supprimer</a>
              {% endif %}
              {% if opt=='add' %}
                <a href="{{ path('user_add', { 'uid': uid }, { 'group': group }) }}">Ajouter droits</a>
              {% endif %}
          </td>
        </tr>
   {% endfor %}
    </tbody>
      
       
</table>
{% endblock %}
