{% extends 'AppBundle::page.html.twig' %}

{% block titre %}Liste de mes groupes{% endblock %}

{% block body %}

<table class="ui-widget-content dataTable TabInfos" filter="25">
    <thead>
        <tr>
            <th>cn</th>
	    <th>Description</th>
            <th>amuGroupFilter</th>
            <th>Voir</th>
	    
        </tr>
    </thead>
    <tbody>
    {% for group in groups %}
	<tr > 
	  <td style="vertical-align: middle;">{{group.cn }}</td>
          <td style="vertical-align: middle;">{{group.description }}</td>
          <td style="vertical-align: middle;">{{group.amugroupfilter }}</td>
          <td style="vertical-align: middle;"><img class="jqtip ui-button" align="absmiddle" src="{{ asset("bundles/app/images/ico/16/view-page.png") }}" title="<small>Voir les membres</small>" class="ui-button" onclick='loadPage("{{ path('voir_groupe', { 'cn': group.cn }) }}");' /></td>
        </tr>
   {% endfor %}
    </tbody>
      
       
</table>
{% endblock %}