#   HEADER   #
##############
    app.titleLogo: "bundles/app/images/ico/48/terre.png"
    # 48x48
    app.background: ~ 
    # "bundles/app/images/amu/fond_dosi_social.png"
    # "bundles/app/images/amu/fond_standard.png"
    app.title: "[app.yml] T&icirc;tr&eacute; de ma nouvelle application AMU Symfony 2.x"
    app.name: "ApplicationName [app.yml]"
    app.slogan: "Exemple de slogan issue de app.yml..."
    app.sm_iconizeTitleSlogan: false #Mettre (en mode sm 'SMartphone'), le nom et le slogan de l'application dans une icone/tips
    app.logo: "web/picture/logo.png"
    app.menu_min_width: false # 250
    app.menu_force_upper: false # true
    app.welcome: "Bienvenue sur l'application..."
    app.logon_tip: "<font color=red><center><b><u>Attention</u></b></center>Vous n'&ecirc;tes <i>pas encore authentifi&eacute;...</i></font><br><br>Veuillez cliquer ici, pour saisir vous identifiants de connection..."
