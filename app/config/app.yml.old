    app.ent: false
    app.effects: true
    # si =true => on MASQUE l entete... (cas des application "embedded"
    app.flags:
       - { into: "app_name", value: "<font color=green><i>D&Eacute;MO</i></font>", routes: ["/demo/*"], roles:[] }
