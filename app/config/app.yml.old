       - { into: "app_slogan", value: "<font color=blue><b>Acc&egrave;s PERSONAL</b></font>", routes: ["/demo/personal*"], roles:[] }
    app.flash.opacity: 99 #97
    app.flash: 
        - { message: "<b><font color=red>[from 'app.yml' => app.flash]</font></b><br> Voici un petit message d'INFORMATION STATIQUE (affichage en continu), GLOBAL &agrave; toute l'application...<h> &agrave; partir du 1/12/2012 jusqu'au 31/12/2012...", type : "info", show_roles: ["ROLE_USER_BASIC", "ROLE_USER_ADVANCED"], start: "12/01/2012 01:23", stop: "31/12/2012 16:11" }
        - { message: "<b><font color=red>[from 'app.yml' => app.flash]</font></b><br> Voici un autre message d'ALERTE...<br> Il ne sera disponible que pour les routes _demo_student  et _demo_personal de l'application...", type : "alert", show_roles: ["ROLE_USER_BASIC", "ROLE_USER_ADVANCED"], start: false, stop: false, only_routes:["_demo_student","_demo_personal"] }
