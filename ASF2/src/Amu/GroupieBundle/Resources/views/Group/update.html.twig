{% extends 'base.html.twig' %}

{% block app_menu %}
    {{ knp_menu_render('AppBundle:Builder:mainMenu') }}
    <div class="clear"><hr /></div>
{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/amugroupie/css/groupie.css') }}" type="text/css" />
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>

    <h1>Modification des membres du groupe <span style="font-variant-caps: small-caps;"> {{ group.cn }} </span></h1>
    {% set hilightColor='#C7FE74' %}

    {% if app.session.has('_saved') and app.session.get('_saved', 0) == 1 %}
        <div style="display: none;"> {{ app.session.remove('_saved') }} </div>

        {% if app.session.flashbag.has('flash-notice') %}
            <center>
            <div class="ui-state-highlight ui-button ui-corner-all" onclick="$(this).remove();" style="min-width:600px;padding:15px;margin:10px;">
                {% for flashMessage in app.session.flashbag.get('flash-notice') %}
                    <p>{{ flashMessage }}</p>
                {% endfor %}
            </div>
            </center>
        {% endif %} 

        <br>
        <h3>Nombre de membres du groupe <b>{{ group.cn }}</b> : {{ nb_membres }}</h3>
        <br>
        {% if group.amugroupfilter =='' %}
            <h3>AmuGroupFilter : aucun </h3> 
        {% else %}
            <h3>AmuGroupFilter : </h3> <h4> {{ group.amugroupfilter}} </h4>
        {% endif %}
        <br>
        <div class="buttons">
            <a href="{{ path('user_search', { 'opt': 'add', 'cn' : group.cn, 'liste' : liste }) }}">
                <img src="{{asset('bundles/amugroupie/images/add-2.png')}}" alt=""/>
                &nbsp;Ajouter un membre&nbsp;
            </a>
        </div>
        
        <br>
        <br> 
        {% if nb_membres > 0 %}
        <form class="amuForms" id="_ajxFromModifier">
            <table id="memb" class="ui-widget-content dataTable TabInfos" filter="25">
                <thead>
                    <tr>
                        <th>uid</th>
                        <th>DisplayName</th> 
                        <th>Mail</th>
                        <th>Tel</th>
                        <th>Membre</th>
                        <th>Admin</th>
                    </tr>
                </thead>
                <tbody> 
                    {# itère sur chaque membership existant et affiche les champs : name, memberof et adminof #}
                    {% for m in form.members  %}
                        <tr> 
                            {#<td style="vertical-align: middle;"> {{ m.uid }}  </td>
                            <td style="vertical-align: middle;"> {{ m.displayname }}  </td>
                            <td style="vertical-align: middle;"> <a href="mailto:{{m.mail}}"> {{ m.mail }}  </td>
                            <td style="vertical-align: middle;"> {{ m.tel }}  </td>
                            <td style="vertical-align: middle;"> <input type = 'checkbox' disabled="disabled" {% if m.member == 1 %} checked='checked' {% endif %} /> </td> #}
                            <td style="vertical-align: middle;"> {{ group.members[loop.index0].uid }} </td>
                            <td style="vertical-align: middle;"> {{ group.members[loop.index0].displayname }} </td>
                            <td style="vertical-align: middle;"> <a href="mailto:{{group.members[loop.index0].mail}}"> {{ group.members[loop.index0].mail }} </td>
                            <td style="vertical-align: middle;"> {{ group.members[loop.index0].tel }} </td>
                            <td style="vertical-align: middle;"> {{ form_widget(m.member) }} </td>
                            <td style="vertical-align: middle;"> {{ form_widget(m.admin) }} </td>
                    </tr>  
                    {% endfor %}
                </tbody>
            </table>
            <br>
            <p>
            <div class="buttons">
                <a href="{{ path('user_search', { 'opt': 'add', 'cn' : group.cn, 'liste' : liste }) }}">
                    <img src="{{asset('bundles/amugroupie/images/valid.png')}}" alt=""/>
                    &nbsp;Valider les changements de droit&nbsp;
                </a>
                <a href="{{ path('homepage') }}">
                    <img src="{{asset('bundles/amugroupie/images/cancel.png')}}" alt=""/>
                    &nbsp;Annuler&nbsp;
                </a>
            </div>

            </p>

            {{ form_rest(form) }}
            
        </form>
        <br> 
        
       {% endif %} 
       
       {% if liste=='mesgroupes' %}
        <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
                onclick="loadPage('{{path('my_groups') }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{ asset('bundles/amugroupie/images/prev-green.png') }}" />&nbsp;Retour à la liste des groupes&nbsp;
        </button>
        {% endif %}
        {% if liste=='recherchegroupe' %}
        <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
            onclick="loadPage('{{path('group_display') }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{ asset('bundles/amugroupie/images/prev-green.png') }}" />&nbsp;Retour à la liste&nbsp;
        </button>
        {% endif %}
         
    {% else %}
        
        {% if app.session.flashbag.has('flash-notice') %}
            <center>
            <div class="ui-state-highlight ui-button ui-corner-all" onclick="$(this).remove();" style="min-width:600px;padding:15px;margin:10px;">
                {% for flashMessage in app.session.flashbag.get('flash-notice') %}
                    <p>{{ flashMessage }}</p>
                {% endfor %}
            </div>
            </center>
        {% endif %} 
               
        <br>
        <h3>Nombre de membres du groupe <b> {{ group.cn }} </b> : {{ nb_membres }}</h3>
        <br>
        {% if group.amugroupfilter =='' %}
            <h3>AmuGroupFilter : aucun </h3> 
        {% else %}
            <h3>AmuGroupFilter : </h3> <h4> {#{{ group.amugroupfilter}}#} </h4>
        {% endif %}
        <br>
        <div class="buttons">
            <a href="{{ path('user_search', { 'opt': 'add', 'cn' : group.cn, 'liste' : liste }) }}">
                <img src="{{asset('bundles/amugroupie/images/add-2.png')}}" alt=""/>
                &nbsp;Ajouter un membre&nbsp;
            </a>
        </div>
        <br>
        <br>
        {% if nb_membres > 0 %}
        <form class="amuForms" id="_ajxFromModifier">
            <table id="memb" class="ui-widget-content dataTable TabInfos" filter="25">
                <thead>
                    <tr>
                        <th>uid</th>
                        <th>DisplayName</th>
                        <th>Mail</th>
                        <th>Tel</th>
                        <th>Membre</th>
                        <th>Admin</th>
                    </tr>
                </thead>
                <tbody>
                    {# itère sur chaque member existant et affiche les champs  #}
                    {% for m in form.members  %}
                        <tr> 
                            <td style="vertical-align: middle;"> {{ group.members[loop.index0].uid }} </td>
                            <td style="vertical-align: middle;"> {{ group.members[loop.index0].displayname }} </td>
                            <td style="vertical-align: middle;"> <a href="mailto:{{group.members[loop.index0].mail}}"> {{ group.members[loop.index0].mail }} </td>
                            <td style="vertical-align: middle;"> {{ group.members[loop.index0].tel }} </td>
                            <td style="vertical-align: middle;"> {{ form_widget(m.member) }} </td>
                            <td style="vertical-align: middle;"> {{ form_widget(m.admin) }} </td>
                        </tr>  
                    {% endfor %}
                </tbody>
            </table>
            <br>
            <p>
                <button type="button" id="button_val" class="ui-button ui-widget-content ui-corner-all" style="padding:5px; "  
                ><img align="absmiddle" src="{{asset('bundles/amugroupie/images/valid.png')}}" />&nbsp;Valider les changements de droits&nbsp;</button>
                <span class="record_actions"></span>
                <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;" onclick="loadPage('{{ path('homepage') }}');" ><img align="absmiddle" src="{{asset('bundles/amugroupie/images/cancel.png')}}" />&nbsp;Annuler&nbsp;</button>
            </p>

            {{ form_rest(form) }}
        </form>
        <br>
        
        
        {% endif %}
        
       {% if liste=='mesgroupes' %}
        <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
                onclick="loadPage('{{path('my_groups') }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{ asset('bundles/amugroupie/images/prev-green.png') }}" />&nbsp;Retour à la liste des groupes&nbsp;
        </button>
        {% endif %}
        {% if liste=='recherchegroupe' %}
        <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
            onclick="loadPage('{{path('group_search') }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{ asset('bundles/amugroupie/images/prev-green.png') }}" />&nbsp;Retour à la recherche&nbsp;
        </button>
        {% endif %}

    {% endif %}

    <br>
    
   

    {# Ajout d'une fonction javascript pour gérer les lignes cachées de la datatable #}
    <script type="text/javascript" src="http://cdn.datatables.net/plug-ins/1.10.7/api/fnGetHiddenNodes.js"/>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#button_val').click( function () {
                oTable = $('#memb').dataTable();
                $(oTable.fnGetHiddenNodes()).appendTo(this);
                loadPage('{{ path('group_update', { 'cn': group.cn, 'liste': liste }) }}', $('#_ajxFromModifier').serializeArray());
            } );
        } );
    </script>
{% endblock %}


