{% extends 'AppBundle::page.html.twig' %}

{% block titre %}Liste de tous les groupes privés{% endblock %}

{% block body %}

    <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:10px; " onclick="loadPage('{{ path('user_search', { 'opt': 'searchprivate' }) }}');" ><img align="absmiddle" src="{{asset('bundles/app/images/ico/16/user-search.png')}}" />&nbsp;Voir les groupes privés d'un utilisateur &nbsp;</button>        
    
    <br>
    <br>
    
    <table class="ui-widget-content dataTable TabInfos" filter="25">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Voir</th>
            </tr>
        </thead>
        <tbody> 
        {% for group in groups %}
            <tr > 
                <td style="vertical-align: middle;">{{group.cn}}</td>
                <td style="vertical-align: middle;">{{group.description}}</td>
                <td style="vertical-align: middle;">
                    <img align="absmiddle" src="{{ asset("bundles/app/images/ico/16/view-page.png") }}" title="Gérer le groupe" class="ui-button" onclick="loadPage('{{ path('voir_groupe_prive', { 'cn': group.cn, 'opt': 'tous' }) }}');" />
                </td>
            </tr> 
        {% endfor %}
        </tbody>    
    </table>
    <br>
    

{% endblock %}
